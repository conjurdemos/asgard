# automatically generated by Conjur container config

server {
  listen <%=outer%>;
  location / {
    access_by_lua '
      -- allow calling self
      if ngx.var.remote_addr == "127.0.0.1" then
        return
      end

      local res = ngx.location.capture("/conjur-authn")

      if res.status >= 400 then
        ngx.exit(ngx.HTTP_FORBIDDEN)
      elseif res.status < 300 then
        return
      end

      ngx.exit(ngx.HTTP_INTERNAL_SERVER_ERROR)
    ';
    proxy_pass http://localhost:<%=inner%>;
  }

  location = /conjur-authn {
    internal;
    proxy_pass https://conjur/api/authz/<%=account%>/resources/<%=authn_login%>/?check=true&privilege=execute;
    proxy_intercept_errors on;
    proxy_next_upstream error timeout http_403;
    proxy_pass_request_body off;
    proxy_set_header Content-Length "";
    proxy_set_header X-Original-URI $request_uri;
  }
}
